{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "types": ["node", "cheerio", "ramda", "tape"]
  },
  "include": [
    "source/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "source/**/*.spec.ts"
  ]
}
