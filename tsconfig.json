{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2016", "dom"],
    "mapRoot": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "sourceRoot": "./dist",
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": ["**/*.ts"],
  "exclude": ["./node_modules", "./test", "**/*.spec.ts"]
}
